# Print welcome:
clear
OS=`uname -sm`
KERNEL=`uname -r`
CPU=`uname -p`
TIME=`uptime | awk '{print $1}'`
TOTALMEM=`free -m -t | grep Total: | awk '{print $2}'`
USEDMEM=`free -m -t | grep Total: | awk '{print $3}'`
MEM=`echo $USEDMEM"M" / $TOTALMEM"M"`
USEDDATA=`dfh | grep Raid | awk '{print $4}'`
TOTALDATA=`dfh | grep Raid | awk '{print $3}'`
DATA=`echo $USEDDATA / $TOTALDATA`
USEDROOT=`dfh | grep rootfs | awk '{print $4}'`
TOTALROOT=`dfh | grep rootfs | awk '{print $3}'`
ROOT=`echo $USEDROOT / $TOTALROOT`
ADDR=`/sbin/ifconfig | awk /'inet addr/ {print $2}' | head -1`
ADDR=${ADDR:5:50}
